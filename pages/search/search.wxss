.header{
  padding: 20rpx;
  text-align: center;
  font-weight: bold;
  border-bottom: 1rpx solid #ccc;
}
.list{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.list-item{
  display: flex;
  cursor: pointer;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx;
}
.list-item image{
  width: 180rpx;
  height:200rpx;
}
.list-item .info{
  flex:1;
  margin-left: 20rpx;
  font-size: 30rpx;
}
.list-item .info .title{
  font-size: 40rpx;
}
.list-item .info text{
  display: inline-block;
  margin-top: 10rpx;}
.list-item .rating text{
  font-size: 28rpx;
  background-color:#c40;
  color:#fff;
  padding:10rpx;
  border-radius: 28rpx;  
}